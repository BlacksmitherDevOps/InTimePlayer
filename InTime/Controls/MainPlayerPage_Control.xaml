<UserControl x:Class="InTime.Controls.MainPlayerPage_Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InTime.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Name="mainBtns_Style" x:Key="MainButton_Style" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Name="ListboxPlaylist_Style" x:Key="ListboxPlaylist_Style" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ListBoxItem" x:Key="itemSong_Style">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    CornerRadius="10"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF6DF3ED"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate x:Key="itemSong_Template">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Title}" Style="{StaticResource ListboxPlaylist_Style}" Grid.Column="1"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <Grid><!--left panel-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="110"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="200*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1" Background="#FFE83B3B">
                        <TextBlock Name="homePage_tb" Text="Home Page"
                               Style="{StaticResource MainButton_Style}"/>
                        <TextBlock Name="recomend_tb" Text="Recomendations"
                               Style="{StaticResource MainButton_Style}" Margin="0,7,0,0"/>
                        <TextBlock Name="liked_tb" Text="Liked songs"
                               Style="{StaticResource MainButton_Style}" Margin="0,7,0,0"/>
                    </StackPanel>
                    <TextBlock Text="My playlists:" Grid.Row="2" Style="{StaticResource MainButton_Style}"
                           Foreground="#FFE83B3B" FontWeight="Normal"/>
                    <ListBox Name="myList_lb" Background="#FFE83B3B" Grid.Row="3" ItemsSource="{Binding}" 
                         ItemContainerStyle="{StaticResource itemSong_Style}"
                         ItemTemplate="{StaticResource itemSong_Template}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    </ListBox>
                    <Border Grid.Row="4" BorderThickness="2,0,2,2" BorderBrush="#FFE83B3B">
                        <TextBlock Name="addPlaylist_btn" Text="+" Style="{StaticResource MainButton_Style}"
                               Foreground="#FF26FF4E" FontSize="26" FontWeight="Bold"/>
                    </Border>
                </Grid>
                <Grid Grid.Column="1"> <!--central panel-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Name="search_tb" Text="Search..." Width="250" FontSize="20"/>
                    <Border Name="centralInfo_bord" Grid.Row="1">
                        <ScrollViewer>
                            <StackPanel Name="tape_panel" VerticalAlignment="Stretch">
                                
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
                <Grid Grid.Column="2"><!--right panel-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <!--Avatar-->
                        <Border BorderThickness="0"
                             HorizontalAlignment="Left"
                             Width="40" Height="40"
                             CornerRadius="100" Cursor="Hand">
                            <Grid>
                                <Border Name="Mask"
                                    Background="White"
                                    BorderBrush="#FF3B5998"
                                    BorderThickness="1"
                                    CornerRadius="100" 
                                    >
                                </Border>
                                <StackPanel>
                                    <Image Name="Avatar"
                                Source="{Binding Image}" />
                                    <StackPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Mask}" />
                                    </StackPanel.OpacityMask>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <!--Profile-->
                        <TextBlock Name="Profile_tb" Text="Profile"
                                   FontSize="22" Foreground="#FFE83B3B" FontWeight="Medium"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    <ListBox Name="friendst_lb" Background="#FFE83B3B" Margin="0,0,0,30" Grid.Row="3" ItemsSource="{Binding}" 
                         ItemContainerStyle="{StaticResource itemSong_Style}"
                         ItemTemplate="{StaticResource itemSong_Template}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    </ListBox>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition MinWidth="100" MaxWidth="200"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <Image Source="3E-zsSjyGLU.jpg"/>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Singer" FontSize="18" Margin="2,0" FontWeight="Medium"/>
                    <TextBlock Text="Track name" FontSize="18" Margin="2,0" Grid.Row="1" FontWeight="Medium"/>
                </Grid>
                <StackPanel Grid.Column="2">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Width="70" Margin="10,0" FontSize="20" Content="Prew"/>
                        <Button Width="70" Margin="10,0" FontSize="20" Content="Rereat"/>
                        <Button Width="70" Margin="10,0" FontSize="20" Content="Next"/>
                    </StackPanel>
                    <ProgressBar Margin="0,5" Height="5"/>
                </StackPanel>
            </Grid>
            
        </Grid>
    </Grid>
</UserControl>
