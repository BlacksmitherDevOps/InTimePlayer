<UserControl x:Class="InTime.Controls.PlaylistGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InTime.Controls"
             mc:Ignorable="d" 
             Name="_Playlist"
             d:DesignHeight="410" d:DesignWidth="440">
    <UserControl.Resources>
        <Style x:Key="text" TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="24"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Rectangle Width="50" Height="50" Margin="22,20,368,68">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding ImageSource,ElementName=_Playlist}"/>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Text="Playlist :" Width="35" Height="20" Margin="77,20,328,60" Style="{StaticResource text}"/>
            <TextBlock Text="{Binding PlaylistName,ElementName=_Playlist}" Height="20" Width="250" Style="{StaticResource text}" Margin="117,20,73,60"/>
            <TextBlock Text="Playlist duration :" Height="20" Style="{StaticResource text}" Margin="76,45,273,35" />
            <TextBlock Text="{Binding PlaylistDuration,ElementName=_Playlist,StringFormat=hh:mm:ss}" Height="20" Width="150" Margin="167,45,123,35" Style="{StaticResource text}"/>
            <TextBlock Text="Songs count :" Height="20" Style="{StaticResource text}" Margin="77,70,288,10"/>
            <TextBlock Text="{Binding SongsCount,ElementName=_Playlist}" Style="{StaticResource text}" Height="20" Width="100" Margin="152,70,188,10"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Red"  BorderThickness="0,0.8,0,0.8" Grid.ColumnSpan="7"/>
            <TextBlock Text="title" Grid.Column="1" FontSize="10"
                        Margin="7,3,0,0"/>
            <TextBlock Grid.Column="2" Text="artist" FontSize="10"
                       Margin="7,3,0,0"/>
            <TextBlock Grid.Column="3" Text="album" FontSize="10"
                       Margin="7,3,0,0"/>
            <TextBlock Grid.Column="4" Text="duration" FontSize="10"
                       Margin="7,3,0,0"/>
        </Grid>
        <ListBox  Grid.Row="2">
            <local:PlaylistItem SongAlbum="test" SongTitle="test" SongArtist="bogdan"/>
        </ListBox>
    </Grid>
</UserControl>
